<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_syn"
            android:layout_width="325dp"
            android:layout_height="134dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:contentDescription="row"
            android:src="@drawable/syn"></ImageView>

        <TextView
            android:id="@+id/titre_syn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/belgrano"
            android:text="Titre"
            android:textAlignment="center"
            android:textColor="@color/police"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/des_syn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/belgrano"
        android:text="Titre"
        android:textAlignment="center"
        android:textColor="@color/police"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sp_syn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/belgrano"
        android:text="Titre"
        android:textAlignment="center"
        android:textColor="@color/police"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/droppe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/belgrano"
            android:text="Titre"
            android:textAlignment="center"
            android:textColor="@color/police"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/stole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/belgrano"
            android:text="Titre"
            android:textAlignment="center"
            android:textColor="@color/police"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>